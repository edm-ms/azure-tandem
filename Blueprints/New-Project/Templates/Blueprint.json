            "npd",
            "sbx"
          ]
        },
        "ApplicationName": {
            "type": "string"
          },
          "ApplicationOwner": {
            "type": "string"
          },
          "ContactEmail": {
            "type": "string"
          },
          "CostCenter": {
            "type": "string"
          },
