{
  "kind": "template",
  "properties": {
    "displayName": "Log Workspace",
    "description": "",
    "dependsOn": [],
    "template": {
      "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "environment": {
          "type": "string"
        },
        "appName": {
          "type": "string"
        },
        "dataClass": {
          "type": "string"
      }
      },
      "variables": {
        "location": "[replace(replace(replace(parameters('environment'), 'prd', 'eastus2'), 'npd', 'centralus'), 'sbx', 'centralus')]",
        "regionName": "[replace(replace(replace(replace(replace(variables('location'),'north','n'), 'east', 'e'),'south', 's'),'west', 'w'),'central', 'c')]",
        "nameFormat": "[concat(variables('regionName'), '-', parameters('environment'), '-', toLower(parameters('appName')), '-')]",
        "shortName": {
            "keyVault": "kv",
            "logAnalytics": "law",
            "azureFirewall": "azfw",
            "networkSecurityGroup": "nsg",
            "azureFrontDoor": "afd",
            "publicIP": "pip",
            "managedIdentity": "mi",
            "sqlDB": "sql",
            "sqlMI": "sqlmi"
            }
        },
      "resources": [
        {
          "type": "Microsoft.OperationalInsights/workspaces",
          "name": "[concat(variables('nameFormat'), variables('shortName').logAnalytics)]",
          "apiVersion": "2020-03-01-preview",
          "location": "[variables('location')]",
          "tags": {
            "Blueprint": "Platform-Management"
          },
          "properties": {
            "sku": {
              "Name": "pergb2018"
            },
            "retentionInDays": "365"
          }
        }
      ],
      "outputs": {
        "workspaceID": {
          "type": "string",
          "value": "[resourceId('Microsoft.OperationalInsights/workspaces', concat(variables('nameFormat'), variables('shortName').logAnalytics))]"
        },
        "workspaceName": {
          "type": "string",
          "value": "[concat(variables('nameFormat'), variables('shortName').logAnalytics)]"
        }
      }
    },
    "resourceGroup": "Logging-RG",
    "parameters": {
      "environment": {
        "value": "[parameters('environment')]"
      },
      "appName": {
          "value": "platform"
        },
        "dataClass": {
          "value": "Internal"
      }      
    }
  }
}